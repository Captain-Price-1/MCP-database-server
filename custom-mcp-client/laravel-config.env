# Laravel MySQL Configuration for MCP Client
# Copy this to .env file

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Debug Options
DEBUG_SCHEMA=false  # Set to 'true' to see the full schema sent to OpenAI

# MCP Database Server Configuration
MCP_SERVER_PATH=../dist/src/index.js

# Laravel MySQL Database Configuration
DATABASE_TYPE=mysql
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_NAME=laravel
DATABASE_USER=root
DATABASE_PASSWORD=root
